                    <Paragraph TextIndent="16">&lt;/ResourceDictionary.MergedDictionaries&gt;</Paragraph>
                    <Paragraph TextIndent="12">&lt;/ResourceDictionary&gt;</Paragraph>
                    <Paragraph>&lt;/Application.Resources&gt;</Paragraph>
                </RichTextBlock> 
            </local:ControlExample>
          
            <local:ControlExample x:Name="Example3" HeaderText="Adding The compact dictionary on layout panels">
                <RichTextBlock Style="{StaticResource XamlCodeRichTextBlockStyle}" FontFamily="Consolas">
                    <Paragraph>&lt;Application.Resources/&gt;</Paragraph>
                    <Paragraph TextIndent="12">&lt;ResourceDictionary/&gt;</Paragraph>
                    <Paragraph TextIndent="16">&lt;ResourceDictionary.MergedDictionaries/&gt;</Paragraph>
                    <Paragraph TextIndent="20">&lt;ResourceDictionary Source="Styles/CompactSizing.xaml" /&gt;</Paragraph>
                    <Paragraph TextIndent="16">&lt;/ResourceDictionary.MergedDictionaries&gt;</Paragraph>
                    <Paragraph TextIndent="12">&lt;/ResourceDictionary&gt;</Paragraph>
                    <Paragraph>&lt;/Application.Resources&gt;</Paragraph>
                </RichTextBlock>
            </local:ControlExample>
