    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <Grid x:Name="controlsTable">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock FontSize="18" Grid.Row="0" Text="Compact Supported Controls" />
                <TextBlock Grid.Column="0" Grid.Row="1" Text="ListVew" />
                <TextBlock Grid.Column="0" Grid.Row="2" Text="TextBox" />
                <TextBlock Grid.Column="0" Grid.Row="3" Text="PasswordBox" />
                <TextBlock Grid.Column="0" Grid.Row="4" Text="AutosuggestBox" />
                <TextBlock Grid.Column="0" Grid.Row="5" Text="ComboBox" />
                <TextBlock Grid.Column="1" Grid.Row="1" Text="DatePicker" />
                <TextBlock Grid.Column="1" Grid.Row="2" Text="TimePicker" />
                <TextBlock Grid.Column="1" Grid.Row="3" Text="TreeView" />
                <TextBlock Grid.Column="1" Grid.Row="4" Text="NavigationView" />
                <TextBlock Grid.Column="1" Grid.Row="5" Text="MenuBar" />
            </Grid>
            <local:ControlExample x:Name="Example1" HeaderText="Adding The compact dictionary to your app.xaml">
                <RichTextBlock Style="{StaticResource XamlCodeRichTextBlockStyle}" FontFamily="Consolas">
                    <Paragraph>&lt;Application.Resources/&gt;</Paragraph>
                    <Paragraph TextIndent="12">&lt;ResourceDictionary/&gt;</Paragraph>
                    <Paragraph TextIndent="16">&lt;ResourceDictionary.MergedDictionaries/&gt;</Paragraph>
                    <Paragraph TextIndent="20">&lt;ResourceDictionary Source="Styles/CompactSizing.xaml" /&gt;</Paragraph>
                    <Paragraph TextIndent="16">&lt;/ResourceDictionary.MergedDictionaries&gt;</Paragraph>
                    <Paragraph TextIndent="12">&lt;/ResourceDictionary&gt;</Paragraph>
                    <Paragraph>&lt;/Application.Resources&gt;</Paragraph>
                </RichTextBlock>
            </local:ControlExample>

            <local:ControlExample x:Name="Example2" HeaderText="Adding the compact dictionary to your page.">
                <RichTextBlock Style="{StaticResource XamlCodeRichTextBlockStyle}" FontFamily="Consolas">
                    <Paragraph>&lt;Application.Resources/&gt;</Paragraph>
                    <Paragraph TextIndent="12">&lt;ResourceDictionary/&gt;</Paragraph>
                    <Paragraph TextIndent="16">&lt;ResourceDictionary.MergedDictionaries/&gt;</Paragraph>
