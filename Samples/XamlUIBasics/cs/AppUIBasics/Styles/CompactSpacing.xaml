<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppUIBasics">

    <!--Compact Button-->
    <!--<Style TargetType="Button">
        <Setter Property="FontSize" Value="14" />
    </Style>-->

    <!--Compact Combobox-->
    <Thickness x:Key="ComboBoxHeaderThemeMargin">0,0,0,4</Thickness>
    <Thickness x:Key="ComboBoxItemThemeTouchPadding">11,11,11,13</Thickness>
    <Thickness x:Key="ComboBoxItemThemeGameControllerPadding">11,11,11,13</Thickness>
    <Thickness x:Key="ComboBoxDropdownContentMargin">0,4,0,4</Thickness>
     <!--Need to log bug, this values does nothing and real value is hard coded in generic.xaml-->
    <x:Double x:Key="ComboBoxArrowFontSize">8</x:Double>
    <Style TargetType="ComboBox">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="8,1,6,1" />
    </Style>

    <!--Flyouts-->
    <x:Double x:Key="FlyoutThemeMinHeight">32</x:Double>

    <!--Compact Date Picker-->
    <x:Double x:Key="DatePickerFlyoutPresenterHighlightHeight">32</x:Double>
    <x:Double x:Key="DatePickerFlyoutPresenterAcceptDismissHostGridHeight">32</x:Double>
    <x:Double x:Key="DatePickerFlyoutPresenterItemHeight">32</x:Double>

    <Style TargetType="DatePicker">
        <!--Need to log bug for control height-->
        <Setter Property="FontSize" Value="14" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="MaxHeight" Value="24" />
    </Style>

    <!--Compact Time Picker-->
    <x:Double x:Key="TimePickerFlyoutPresenterHighlightHeight">32</x:Double>
    <x:Double x:Key="TimePickerFlyoutPresenterAcceptDismissHostGridHeight">32</x:Double>
    <x:Double x:Key="TimePickerFlyoutPresenterItemHeight">32</x:Double>
    <Style TargetType="TimePicker">
        <!--Need to log bug for control height-->
        <Setter Property="FontSize" Value="14" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!--Compact Listview--> 
    <x:Double x:Key="ListViewItemMinHeight">32</x:Double>
    <x:Double x:Key="ListViewHeaderItemMinHeight">32</x:Double>
    <x:Double x:Key="ListViewHeaderItemThemeFontSize">15</x:Double>
    <Style TargetType="ListViewItem">
        <Setter Property="Height" Value="32"/>
        <Setter Property="FontSize" Value="14" />
    </Style>
    <Style TargetType="ListViewHeaderItem">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="0,3,0,0" />
    </Style>

    <!-- Compact Text Box with header-->
    <x:Double x:Key="TextControlThemeMinHeight">48</x:Double>
    <Thickness x:Key="TextControlBorderThemeThickness">1</Thickness>
    <Thickness x:Key="TextControlMarginThemeThickness">0,9.5,0,9.5</Thickness>
    <x:Double x:Key="TextControlThemeMinWidth">64</x:Double>
    <Thickness x:Key="TextControlThemePadding">8,1,6,1</Thickness>
    <Thickness x:Key="TextControlPlaceholderThemePadding">12,5,10,5</Thickness>
    <Style TargetType="TextBox">
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!--Compact Navigation View-->
    <!--<x:Double x:Key="NavigationBackButtonWidth">40</x:Double>
    <x:Double x:Key="NavigationBackButtonHeight">40</x:Double>-->
    
    <!--<Thickness x:Key="NavigationViewItemIconBoxMargin">10,12,16,12</Thickness>
    <Thickness x:Key="NavigationViewItemInnerHeaderMargin">10,0,0,0</Thickness>
    <Thickness x:Key="NavigationViewAutoSuggestBoxMargin">10,0,16,0</Thickness>
    <x:Double x:Key="PaneToggleButtonSize">40</x:Double>
    <x:Double x:Key="PaneToggleButtonHeight">40</x:Double>
    <x:Double x:Key="PaneToggleButtonWidth">40</x:Double>
    <x:Double x:Key="NavigationViewCompactPaneLength">40</x:Double>
    <x:Double x:Key="NavigationViewTopNavHeight">32</x:Double>-->
    
    <!--<Style TargetType="NavigationView">
        <Setter Property="FontSize" Value="14" />
    </Style>
    <Style TargetType="NavigationViewItem">
        <Setter Property="Height" Value="32" />
        <Setter Property="Margin" Value="0,0,0,0" />
        <Setter Property="Padding" Value="0,0,0,0" />
        <Setter Property="MaxHeight" Value="32" />
        <Setter Property="MinHeight" Value="32" />
    </Style>

    --><!--Compact Tree View-->
    <!--<x:Double x:Key="TreeViewItemMinHeight">24</x:Double>
    <x:Double x:Key="TreeViewItemContentHeight">24</x:Double>-->
    
    <Style TargetType="TreeViewItem">
        <Setter Property="Height" Value="24" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="MinHeight" Value="24" />
        <Setter Property="MaxHeight" Value="26" />
    </Style>

</ResourceDictionary>
